extends layout

block content
  h1 Found #{postCount} posts

  each post in posts
    .post
      h2
        a( href=post.link ) #{post.title}

      .inner
        p <em>#{post.sub_reddit}</em> #{formatDateTime(post.date_posted)}
        form(action="/posts/read" method="POST")
          input(type="hidden" name="post_id" value=post.id)
          button Read
